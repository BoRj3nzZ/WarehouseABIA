package modeloTest;

import static org.junit.Assert.assertEquals;

import java.lang.reflect.Method;

import org.junit.Before;
import org.junit.Test;

import modelo.Posicion;

public class PosicionTest {
	private Posicion posicion;
	
	@Before
	public void crearPosicion()
	{
		posicion = new Posicion(10, "1");
		//System.setOut(new PrintStream(outContent));
	}
	@Test
	public void testDivision() throws NoSuchMethodException, SecurityException, IllegalAccessException, IllegalArgumentException, InvocationTargetException  {	    
	   Method method = Posicion.class.getDeclaredMethod("getPos");
       method.setAccessible(true);
       Integer result = (Integer)method.invoke(new Posicion(), 10, "");
       assertEquals("La division debe ser 2", 2,(Object)result);
       
    }

}
